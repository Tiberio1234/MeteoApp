@page "/analytics"
@rendermode InteractiveServer
<h3>Analytics</h3>
<RadzenStack class="rz-p-0 rz-p-md-6 rz-p-lg-12" AlignItems="AlignItems.Center">
<RadzenStack Style="width: 100%; max-width: 600px; height:300px">
    <RadzenChart Visible="true">
        <RadzenPieSeries Data="@revenue" Title="Revenue" CategoryProperty="Quarter" ValueProperty="Revenue">
            <RadzenSeriesDataLabels Visible="true" />
        </RadzenPieSeries>
    </RadzenChart>
</RadzenStack>
</RadzenStack>

@code {

    bool showDataLabels = false;

    class DataItem
    {
        public string Quarter { get; set; }
        public double Revenue { get; set; }
    }

    DataItem[] revenue = new DataItem[] {
        new DataItem
        {
            Quarter = "Q1",
            Revenue = 30000
        },
        new DataItem
        {
            Quarter = "Q2",
            Revenue = 40000
        },
        new DataItem
        {
            Quarter = "Q3",
            Revenue = 50000
        },
        new DataItem
        {
            Quarter = "Q4",
            Revenue = 80000
        },
    };
}
